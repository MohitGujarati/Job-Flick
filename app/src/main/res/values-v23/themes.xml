<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Theme.Linkedin_Clone" parent="Base.Theme.Linkedin_Clone">
    <!-- Transparent system bars for edge-to-edge. -->
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
  </style>

  <!-- Define the style for the CustomEditText -->
  <style name="CustomBackground_LightBlueRounded">
    <item name="android:fontFamily">@font/roboto_medium</item>
    <item name="android:background">@drawable/background_profileview</item>
    <item name="android:drawablePadding">@dimen/dimen_10dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:padding">@dimen/dimen_12dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">@dimen/dimen_14dp</item>
  </style>

  <!-- Define the style for the buttonMain (Login and sign up) -->
  <style name="buttonMain" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <item name="cornerRadius">20dp</item>
    <item name="elevation">20dp</item>
    <item name="buttonStyle">@style/Widget.Material3.Button.TonalButton</item>
    <item name="backgroundTint">#1E88E5</item>
    <item name="fontFamily">@font/roboto_medium</item>
    <item name="itemIconTint">@color/light_blue_600</item>
    <item name="itemTextColor">@color/white</item>
  </style>
  <style name="CustomEditTextPassword">
    <item name="android:fontFamily">@font/roboto_medium</item>
    <item name="android:background">@null</item>
    <item name="android:drawablePadding">@dimen/dimen_10dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:padding">@dimen/dimen_12dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">@dimen/dimen_14dp</item>
  </style>
</resources>